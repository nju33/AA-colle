-aa.each_with_index do |aa, i|
  %section
    %h1= aa.name
    .tags
      -if aa.tags.empty?
        %ul<
          %li タグが付けられていません
        =link_to 'タグを編集する', new_tag_path(:aa_id => aa.id), class: 'tag_edit'
      -else
        %ul<
          -aa.tags.each do |tag|
            %li= link_to tag.tag, tags_path(:tag => tag.tag)
        = link_to 'タグを編集する', new_tag_path(:aa_id => aa.id), class: 'tag_edit'

    %div{:id => "aa#{i}", :class => "aa"}= simple_format(aa.body)
    .copy-button クリップボードにコピー
    .user-info= "#{aa.user.name}さんが登録"

