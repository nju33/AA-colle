-if notice
  %p{:id => "notice"}= notice

#aa-list
  -@asciiArts.each_with_index do |aa, i|
    %dl
      %dt
        %dl
          %dt
            %h2=aa.name
          %dd.tags
            -if aa.tags.empty?
              %ul
                %li タグが付けられていません
            -else
              %ul
                -aa.tags.each do |tag|
                  %li=link_to tag.tag, tags_path(:tag => tag.tag)
            =link_to 'タグを編集する', new_tag_path(:aa_id => aa.id)
      %dd
        %div{:id => "aa#{i}", :class => "aa"}=simple_format(aa.body)
        .copy-button クリップボードにコピー
