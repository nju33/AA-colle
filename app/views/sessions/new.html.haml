-if flash[:alert]
  =flash[:alert]
-if notice
  %p{:id => "notice"}=notice

%h2 ログイン

=form_tag do
  =label_tag :email, 'メールアドレス'
  =text_field_tag :email, params[:email]

  =label_tag :password, 'パスワード'
  =password_field_tag :password, params[:password]

  =submit_tag 'ログイン'

= link_to "Twitterでログイン", "/auth/twitter"

